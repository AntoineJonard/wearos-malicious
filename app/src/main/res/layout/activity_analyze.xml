<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".AnalyzeActivity">

    <TextView
        android:id="@+id/progress_details"
        android:textSize="@dimen/common"
        android:text="@string/default_analysis_label"
        android:textAlignment="center"
        android:scrollHorizontally="false"
        android:layout_marginVertical="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/spacing"/>

    <ProgressBar
        android:progress="0"
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:progressDrawable="@drawable/progress_bar_style"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="false"
        android:indeterminateOnly="false"
        android:layout_marginHorizontal="25dp"/>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/progress_percent_label"
        android:hint="@string/default_progress"
        android:textSize="@dimen/common"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


</LinearLayout>